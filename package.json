{
  "name": "kamigotchi",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "run-pty % pnpm contracts:node % pnpm client:dev % pnpm contracts:dev",
    "nuke": "pnpm -r nuke && rimraf node_modules pnpm-lock* yarn.lock",
    "build": "pnpm --filter contracts build && pnpm --filter client build",
    "client:dev": "pnpm -F client dev",
    "contracts:dev": "pnpm -F contracts dev",
    "contracts:node": "pnpm -F contracts devnode"
  },
  "devDependencies": {
    "buffer": "^5.5.0",
    "ejs": "^3.1.9",
    "events": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.0",
    "prettier": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "punycode": "^1.4.1",
    "querystring-es3": "^0.2.1",
    "rimraf": "^5.0.5",
    "run-pty": "^4.0.3",
    "threads": "^1.7.0",
    "url": "^0.11.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "threads@1.7.0": "patches/threads@1.7.0.patch"
    }
  }
}
